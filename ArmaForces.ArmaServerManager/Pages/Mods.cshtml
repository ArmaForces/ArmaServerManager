@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ArmaForces.Arma.Server.Features.Mods
@model ModsModel
@{
    ViewData["Title"] = "Server Startup page";
}

<body>
    <div class="text-center">
        <h1>Mods can be browsed here.</h1>
        <div>
            <table style="border: black thin solid;">
                <thead>
                <tr>
                    <th>
                        @nameof(IMod.Name)
                    </th>
                    <th>
                        @nameof(IMod.Type)
                    </th>
                    <th>
                        @nameof(IMod.Source)
                    </th>
                    <th>
                        @nameof(IMod.WorkshopId)
                    </th>
                    <th>
                        @nameof(IMod.LastUpdatedAt)
                    </th>
                    <th>
                        @nameof(IMod.Directory)
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var mod in Model.Mods)
                {
                    <tr>
                        <td>
                            @mod.Name
                        </td>
                        <td>
                            @mod.Type
                        </td>
                        <td>
                            @mod.Source
                        </td>
                        <td>
                            @mod.WorkshopId
                        </td>
                        <td>
                            @mod.LastUpdatedAt
                        </td>
                        <td>
                            @mod.Directory
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</body>
